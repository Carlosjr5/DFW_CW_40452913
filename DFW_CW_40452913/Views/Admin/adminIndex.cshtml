@model List<getUsersModel>

<div class="table-wrapper">
    <table class="table @ViewData["BWMode"]">
        <thead>
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@string.Join(", ", user.Roles)</td>
                    <td style="display: flex; gap: 10px; text-align:center;">
                        <form asp-controller="Admin" asp-action="ChangeRole" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <select name="roleName">
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                            <button type="submit" style="background-color:lightgreen;">Change Role</button>
                        </form>
                        <form asp-controller="Admin" asp-action="BlockUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" style="background-color:indianred;">Block User</button>
                        </form>
                        <form asp-controller="Admin" asp-action="UnblockUser" method="post">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" style="background-color:skyblue;">Unblock User</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
